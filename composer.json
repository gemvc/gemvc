{
    "name": "gemvc/library",
    "description": "Server Agnostic (openSwoole/Nginx/Apache) Rest Api Microservice ready Framework/Library",
    "type": "library",
    "homepage": "https://gemvc.de",
    "require": {
        "firebase/php-jwt": "^6.8",
        "symfony/dotenv": "^6.4 || ^7.2",
        "gemvc/connection-contracts": "^1.0",
        "gemvc/connection-pdo": "^1.0",
        "gemvc/apm-contracts": "^1.0",  
        "gemvc/apm-tracekit": "^2.0",
        "gemvc/http-client": "^1.2"
    },
    "license": "MIT",
    "archive": {
        "exclude": [
            "/tests",
            "/.phpunit.cache",
            "/phpunit.xml",
            "/phpstan.neon",
            "/phpstan-tests.neon",
            "/coverage",
            "/test-results.xml",
            "/.github",
            "/.gitignore",
            "/.gitattributes",
            "/MYSQL_PRODUCTION_GUIDE.md",
            "/SESSION_CHANGES_SUMMARY.md",
            "/PerformanceOptimizazion.md",
            "/docker-compose-production-comments.yml"
        ]
    },
    "autoload": {
        "psr-4": {
            "Gemvc\\": "src/",
            "Gemvc\\Database\\": "src/database/",
            "Gemvc\\Database\\Query\\": "src/database/query/",
            "Gemvc\\Helper\\": "src/helper/",
            "Gemvc\\Http\\": "src/http/",
            "Gemvc\\Core\\": "src/core/",
            "Gemvc\\CLI\\": "src/CLI/",
            "Gemvc\\CLI\\Commands\\": "src/CLI/commands/"
        },
        "files": [
            "src/database/SqlEnumCondition.php"
        ]
    },
    "bin": [
        "bin/gemvc"
    ],
    "authors": [
        {
            "name": "Ali Khorsandfard",
            "email": "ali.khorsandfard@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "5.2.x-dev"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10.1"
    }
}
