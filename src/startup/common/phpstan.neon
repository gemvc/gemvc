parameters:
    level: 9
    paths:
        - app
        - src
    excludePaths:
        - vendor
        - tests
        - bin

    # Bootstrap file if needed
    # bootstrapFiles:
    #     - bootstrap.php
    
    # Memory limit
    memoryLimitFile: 1G
    
    # Parallel processing
    parallel:
        processTimeout: 120.0
        maximumNumberOfProcesses: 4
    
    # Error format
    errorFormat: table
    
    # Baseline file (will be generated on first run)
    # baseline: phpstan-baseline.neon
